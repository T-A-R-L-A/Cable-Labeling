<%= form_for @cabinet, :html => { :class => "form-horizontal cabinet" } do |f| %>

  <% if @cabinet.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cabinet.errors.count, "error") %> prohibited this cabinet from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cabinet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :abbr, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :abbr, :class => 'form-control' %>
    </div>
    <%=f.error_span(:abbr) %>
  </div>
  <div class="form-group">
    <%= f.label :room, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :room, :class => 'form-control' %>
    </div>
    <%=f.error_span(:room) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cabinets_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
